Actor ShotgunDrop
{
	states
	{
	Spawn:
		TNT1 A 0
		TNT1 A 0 A_Jump(128,"DropAmmo")		
		TNT1 A 0 A_Jump(256,"Spawn1","Spawn2")
	Spawn1:
		TNT1 A 1 A_CustomMissile("DropedShotgun",20,0,0,2,random(30,50))
		stop
	Spawn2:
		TNT1 A 1 A_CustomMissile("DropedShotgun2",20,0,180,2,random(30,50))
		stop
	DropAmmo:
		TNT1 A 1 A_DropItem("64Shell")
		Stop
	}
}

Actor DropedShotgun
{
XScale 0.7
YScale 0.4
damage 0
speed 6
health 1
radius 16
height 4
Mass 1
Gravity 0.9
+MISSILE
+THRUACTORS
+NOTELEPORT
+NOBLOCKMAP
+BLOODLESSIMPACT
+FORCEXYBILLBOARD
+NODAMAGETHRUST
+MOVEWITHSECTOR
+CORPSE
-DONTSPLASH
+DROPPED
	States
	{
	Spawn:
		TRII A 4
		TNT1 A 0 A_ChangeFlag("THRUACTORS",FALSE)
		TRII BCDEFGH 4
		Loop
	Death:
		TNT1 A 0 A_DropItem("64ShotgunTACTICAL")
		TNT1 A 1 A_DropItem("64Shotgun")
		Stop
	}
}

